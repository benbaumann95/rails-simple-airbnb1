<%= simple_form_for(@flat) do |f| %>
<% if @flat.errors.any? %>
<div class="errors-container">
  <ul>
    <% @flat.errors.full_messages.each do |message| %>
    <li><%= message %></li>

    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :address %>
  <%= f.text_area :address, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :picture_Url %>
  <%= f.text_area :pictureUrl, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :number_of_guests %>
  <%= f.text_area :number_of_guests, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :price_per_night %>
  <%= f.text_area :price_per_night, class: 'form-control' %>
</div>

<%= f.submit "Add Flat", class: 'btn btn-primary' %>
<% end %>
