<div class="navbar-wagon">
  <!-- Logo -->
  <div class="navbar-wagon-brand">
    <%= link_to "AirBnB", root_path %>

  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div class="navbar-wagon-item navbar-wagon-link">

      <%= form_tag(flats_path, method: :get) do %>
      <%= text_field_tag :term, params[:term], class: 'form-control' %>
    </div>
    <%= submit_tag 'Search', name: nil, class: 'btn btn-success' %>
    <% end %>

    <div class="navbar-wagon-item navbar-wagon-link">
      <%= link_to "Add a flat", new_flat_path, class: 'btn btn-warning'%>
    </div>
    <div class="navbar-wagon-item navbar-wagon-link">
      <%= link_to "Log in", new_user_registration_path, class: 'btn btn-primary'%>
    </div>
  </div>
</div>
